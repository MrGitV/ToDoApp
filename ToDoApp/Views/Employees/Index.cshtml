@model IEnumerable<ToDoApp.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="card shadow-sm">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="bi bi-people"></i> Employees</h2>
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create New</a>
        </div>
    </div>
    <div class="card-body">
        <div class="search-form mb-3 p-3 bg-light border rounded">
            <form asp-action="Index" method="get" class="row g-3 align-items-center">
                <div class="col-md-5">
                    <input type="text" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Search by name..." />
                </div>
                <div class="col-md-5">
                    <input type="text" name="searchSpecialty" value="@ViewBag.SearchSpecialty" class="form-control" placeholder="Search by specialty..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Search</button>
                </div>
            </form>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">No employees found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Avatar</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Age</th>
                            <th>Specialty</th>
                            <th>Hire Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@Url.Action("GetAvatar", "Employees", new { id = item.Id })" alt="Avatar" class="avatar rounded-circle" />
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@item.Age</td>
                                <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                                <td>@item.HireDate.ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Details">
                                        <i class="bi bi-person-lines-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>