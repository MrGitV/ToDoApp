@model IEnumerable<ToDoApp.Models.ToDoTask>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No tasks assigned to this employee. <a asp-controller="Tasks" asp-action="Create" asp-route-employeeId="@ViewContext.RouteData.Values["id"]" class="alert-link">Create a task</a>
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@(string.IsNullOrEmpty(task.Description) ? "No description" : task.Description)</td>
                    <td>
                        @if (task.IsCompleted)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Not Completed</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}