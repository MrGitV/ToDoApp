@model ToDoApp.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h2>Delete Employee</h2>
    </div>
    <div class="card-body">
        <h3 class="text-danger">Are you sure you want to delete this employee?</h3>
        <p>This action cannot be undone.</p>

        <div class="card my-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center">
                        <img src="@Url.Action("GetAvatar", "Employees", new { id = Model.Id })" alt="Avatar" class="img-fluid rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" />
                    </div>
                    <div class="col-md-9">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                            <dt class="col-sm-4">Username:</dt>
                            <dd class="col-sm-8">@Model.Username</dd>

                            <dt class="col-sm-4">Specialty:</dt>
                            <dd class="col-sm-8">@Model.Specialty</dd>

                            <dt class="col-sm-4">Age:</dt>
                            <dd class="col-sm-8">@Model.Age</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Tasks != null && Model.Tasks.Any())
        {
            <div class="alert alert-warning">
                <strong>Warning:</strong> This employee has @Model.Tasks.Count() associated task(s). Deleting the employee will also permanently delete all of their tasks due to cascading delete rules.
            </div>
        }

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Yes, Delete Employee
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>