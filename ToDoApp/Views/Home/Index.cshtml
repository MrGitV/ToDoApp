@model ToDoApp.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome, Admin!</h1>
    <p class="lead">System-wide statistics and management overview.</p>
</div>

<div class="row text-center">
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card text-white bg-primary h-100">
            <div class="card-header">
                <i class="bi bi-people-fill"></i> Total Employees
            </div>
            <div class="card-body d-flex flex-column justify-content-center">
                <h2 class="card-title display-3">@Model.TotalEmployees</h2>
                <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-light mt-3">Manage Employees</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card text-white bg-success h-100">
            <div class="card-header">
                <i class="bi bi-card-checklist"></i> Total Tasks
            </div>
            <div class="card-body d-flex flex-column justify-content-center">
                <h2 class="card-title display-3">@Model.TotalTasks</h2>
                <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-light mt-3">View All Tasks</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card text-dark bg-warning h-100">
            <div class="card-header">
                <i class="bi bi-exclamation-triangle-fill"></i> Pending Tasks
            </div>
            <div class="card-body d-flex flex-column justify-content-center">
                <h2 class="card-title display-3">@Model.PendingTasks</h2>
                <a asp-controller="Tasks" asp-action="Index" asp-route-isCompleted="false" class="btn btn-outline-dark mt-3">View Pending</a>
            </div>
        </div>
    </div>
</div>