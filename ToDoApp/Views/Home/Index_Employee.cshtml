@model ToDoApp.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome, @User.Identity?.Name!</h1>
    <p class="lead">Here is a summary of your assigned tasks.</p>
</div>

<div class="row justify-content-center text-center">
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card text-white bg-success h-100">
            <div class="card-header">
                <i class="bi bi-card-checklist"></i> My Total Tasks
            </div>
            <div class="card-body d-flex flex-column justify-content-center">
                <h2 class="card-title display-3">@Model.TotalTasks</h2>
                <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-light mt-3">View My Tasks</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card text-dark bg-warning h-100">
            <div class="card-header">
                <i class="bi bi-exclamation-triangle-fill"></i> My Pending Tasks
            </div>
            <div class="card-body d-flex flex-column justify-content-center">
                <h2 class="card-title display-3">@Model.PendingTasks</h2>
                <a asp-controller="Tasks" asp-action="Index" asp-route-isCompleted="false" class="btn btn-outline-dark mt-3">View Pending</a>
            </div>
        </div>
    </div>
</div>