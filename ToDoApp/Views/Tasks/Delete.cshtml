@model ToDoApp.Models.ToDoTask
@{
    ViewData["Title"] = "Delete Task";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h2>Delete Task</h2>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this task?</h3>
        <div class="row mt-4">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-3">Title:</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">
                        @(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)
                    </dd>

                    <dt class="col-sm-3">Assigned to:</dt>
                    <dd class="col-sm-9">
                        @(Model.Employee != null ? $"{Model.Employee.FirstName} {Model.Employee.LastName}" : "No employee assigned")
                    </dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsCompleted)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Not Completed</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>